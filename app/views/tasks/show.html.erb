<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <p class="text-center text-success"><%= notice %></p>

      <div class="card">
        <div class="card-body">
          <%= render @task %>
        </div>
      </div>

      <div class="mt-3 text-center">
        <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary mr-2" %>
        <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary mr-2" %>
        <%= button_to "Destroy this task", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
